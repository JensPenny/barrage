    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'barrage'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=barrage"
                ],
                "filter": {
                    "name": "barrage",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'barrage' send",
            "cargo": {
                "args": [
                    "build",
                    "--bin=barrage",
                    "--package=barrage"
                ],
                "filter": {
                    "name": "barrage",
                    "kind": "bin"
                }
            },
            "args": ["send"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'barrage'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=barrage",
                    "--package=barrage"
                ],
                "filter": {
                    "name": "barrage",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug barrage tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=cli",
                    "--package=barrage"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}